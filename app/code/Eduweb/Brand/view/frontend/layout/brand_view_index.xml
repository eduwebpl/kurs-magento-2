<?xml version="1.0"?>
<page xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" layout="1column" xsi:noNamespaceSchemaLocation="urn:magento:framework:View/Layout/etc/page_configuration.xsd">
    <body>
        <referenceContainer name="content">
            <block name="hello_world" as="hello_world" template="Eduweb_Brand::view/index.phtml">
                <arguments>
                    <argument name="view_model" xsi:type="object">Eduweb\Brand\ViewModel\View</argument>
                </arguments>
            </block>

            <container name="additional_blocks" htmlClass="brand-class" htmlId="brand-id" htmlTag="fieldset">
                <block name="model_x" template="Eduweb_Brand::view/custom.phtml" after="model_y">
                    <arguments>
                        <argument name="code" xsi:type="string">model_x</argument>
                    </arguments>
                </block>

                <block name="model_y" template="Eduweb_Brand::view/custom.phtml">
                    <arguments>
                        <argument name="code" xsi:type="string">model_y</argument>
                    </arguments>
                </block>

                <block name="model_s" template="Eduweb_Brand::view/custom.phtml">
                    <arguments>
                        <argument name="code" xsi:type="string">model_s</argument>
                    </arguments>
                </block>
            </container>
        </referenceContainer>
    </body>
</page>
