<?xml version="1.0"?>
<schema xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:framework:Setup/Declaration/Schema/etc/schema.xsd">
    <table name="brand" engine="innodb" comment="Eduweb Brand">
        <column name="id" xsi:type="int" identity="true" nullable="false"/>
        <column name="name" xsi:type="varchar" length="255" nullable="false"/>
        <column name="url_key" xsi:type="varchar" length="255" nullable="false"/>

        <constraint xsi:type="primary" referenceId="PRIMARY">
            <column name="id"/>
        </constraint>
    </table>
</schema>
